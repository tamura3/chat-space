.sideBar

  .sideBar__top
    %p.sideBar__top__name
      = current_user.name
    .sideBar__top__btn
      = link_to new_group_path do
        = icon('fa', 'edit')
      = link_to edit_user_path(current_user) do
        = icon('fas', 'cog', class: 'icon')
  .sideBar__content
    -# ログイン中のユーザが属するグループのみ表示
    - current_user.groups.each do |group|
      .sideBar__content__group
        = link_to group_messages_path(group) do
          %p.sideBar__content__group__name
            = group.name
          %p.sideBar__content__group__newMessage
            = group.show_last_message

